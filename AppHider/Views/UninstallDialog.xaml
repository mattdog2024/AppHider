<Window x:Class="AppHider.Views.UninstallDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uninstall Authorization"
        Height="250"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Warning Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="âš " FontSize="32" Foreground="#FF9800" Margin="0,0,10,0"/>
            <TextBlock Text="Uninstall Authorization Required" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Warning Message -->
        <TextBlock Grid.Row="1" 
                   TextWrapping="Wrap" 
                   Margin="0,0,0,15"
                   Foreground="#555">
            To uninstall this application, you must enter your password.
        </TextBlock>

        <!-- Password Label -->
        <TextBlock Grid.Row="2" 
                   Text="Password:" 
                   Margin="0,0,0,5"
                   FontWeight="SemiBold"/>

        <!-- Password Input -->
        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="3" 
                     Padding="8"
                     Margin="0,0,0,10"
                     FontSize="14"/>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorText" 
                   Grid.Row="4" 
                   Foreground="Red" 
                   TextWrapping="Wrap"
                   Visibility="Collapsed"
                   Margin="0,5,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"
                    Background="#E0E0E0"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button Content="Authorize" 
                    Width="100" 
                    Height="35"
                    Click="AuthorizeButton_Click"
                    Background="#F44336"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
